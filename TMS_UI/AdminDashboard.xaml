<Window x:Class="term_project.AdminDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Dashboard" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
            <Button x:Name="AddUserButton" Content="Add User" Margin="5" Click="AddUser"/>
            <Button x:Name="DeleteUserButton" Content="Delete User" Margin="5" Click="DeleteUser"/>
        </StackPanel>
        <DataGrid x:Name="UsersDataGrid" Margin="0,40,0,0" AutoGenerateColumns="True" CanUserAddRows="False"/>
    </Grid>
</Window>
